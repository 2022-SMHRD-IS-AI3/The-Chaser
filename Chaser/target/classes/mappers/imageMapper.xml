<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ImageMapper">

	<insert id="insert">
		INSERT INTO tb_image
			(img_nm,
			img_src,
			img_xy,
			img_length,
			img_time,
			episode_idx)
		VALUES
			(#{img_nm},
			#{img_src},
			#{img_xy},
			#{img_length},
			sysdate,
			#{episode_idx})
	</insert>
	
	<select id="listAll" resultType="com.wasp.chaser.domain.ImageDTO">
		<![CDATA[
			SELECT * FROM tb_image 
			WHERE episode_idx = #{episode_idx}
		]]>
	</select>
	
	<delete id="delete">
		DELETE FROM tb_image
		WHERE img_idx = #{img_idx}
	</delete>

</mapper>